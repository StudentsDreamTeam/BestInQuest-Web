st attemptRestoreSession = async () => {\r\n      setIsLoadingUser(true);\r\n      setUserError(null);\r\n      const storedUserId = localStorage.getItem(USER_ID_STORAGE_KEY);\r\n\r\n      if (storedUserId) {\r\n        try {\r\n          console.log(`UserContext: Попытка восстановления сессии для пользователя с ID: ${storedUserId}`);\r\n          const userData = await fetchUserById(storedUserId);\r\n          setUser(userData);\r\n          console.log(\"UserContext: Сессия восстановлена, данные пользователя:\", userData);\r\n        } catch (e) {\r\n          console.error(\"UserContext: Не удалось восстановить сессию:\", e);\r\n          setUserError(e.message);\r\n          setUser(null);\r\n          localStorage.removeItem(USER_ID_STORAGE_KEY); // Очистить невалидный ID\r\n        }\r\n      }\r\n      setIsLoadingUser(false);\r\n    };\r\n\r\n    attemptRestoreSession();\r\n  }, []);\r\n\r\n  const login = useCallback(async (email, password) => {\r\n    setIsLoadingUser(true);\r\n    setUserError(null);\r\n    try {\r\n      const userData = await apiLoginUser(email, password);\r\n      setUser(userData);\r\n      localStorage.setItem(USER_ID_STORAGE_KEY, userData.id);\r\n      console.log(\"UserContext: Login successful, user data:\", userData);\r\n      setIsLoadingUser(false);\r\n      return userData; // Возвращаем данные пользователя для LoginPage, если нужно\r\n    } catch (e) {\r\n      console.error(\"UserContext: Login failed:\", e);\r\n      setUserError(e.message);\r\n      setUser(null);\r\n      localStorage.removeItem(USER_ID_STORAGE_KEY);\r\n      setIsLoadingUser(false);\r\n      throw e; // Пробрасываем ошибку дальше для обработки в LoginPage\r\n    }\r\n  }, []);\r\n\r\n  const logout = useCallback(() => {\r\n    setUser(null);\r\n    localStorage.removeItem(USER_ID_STORAGE_KEY);\r\n    setUserError(null); // Очищаем ошибки при выходе\r\n    console.log(\"UserContext: User logged out\");\r\n    // Можно добавить редирект на страницу входа, если это не обрабатывается в App.jsx\r\n  }, []);\r\n\r\n  // Функция для перезагрузки, если понадобится\r\n  const reloadUser = useCallback(async () => {\r\n    const currentUserId = user?.id || localStorage.getItem(USER_ID_STORAGE_KEY);\r\n    if (!currentUserId) {\r\n        setUserError(\"Невозможно перезагрузить пользователя: ID не найден.\");\r\n        return;\r\n    }\r\n    setIsLoadingUser(true);\r\n    setUserError(null);\r\n    try {\r\n      const userData = await fetchUserById(currentUserId);\r\n      setUser(userData);\r\n    } catch (e) {\r\n      setUserError(e.message);\r\n      setUser(null); // Если не удалось перезагрузить, возможно, сессия невалидна\r\n      localStorage.removeItem(USER_ID_STORAGE_KEY);\r\n    } finally {\r\n      setIsLoadingUser(false);\r\n    }\r\n  }, [user]);\r\n\r\n\r\n  const value = {\r\n    user,\r\n    isLoadingUser,\r\n    userError,\r\n    login,\r\n    logout,\r\n    reloadUser,\r\n  };\r\n\r\n  return <UserContext.Provider value={value}>{children}</UserContext.Provider>;\r\n};"],"mappings":"AAEA,SAAS,eAAe,UAAU,WAAW,YAAY,mBAAmB;AAC5E,SAAS,eAAe,aAAa,oBAAoB;AAEzD,MAAM,cAAc,cAAc;AAClC,MAAM,sBAAsB;AAErB,gBAAS,UAAU;AACxB,QAAM,UAAU,WAAW,WAAW;AACtC,MAAI,YAAY,QAAW;AACzB,UAAM,IAAI,MAAM,4CAA4C;AAAA,EAC9D;AACA,SAAO;AACT;AAEO,gBAAS,aAAa,EAAE,SAAS,GAAG;AACzC,QAAM,CAAC,MAAM,OAAO,IAAI,SAAS,IAAI;AACrC,QAAM,CAAC,eAAe,gBAAgB,IAAI,SAAS,IAAI;AACvD,QAAM,CAAC,WAAW,YAAY,IAAI,SAAS,IAAI;AAG/C,YAAU,MAAM;AACd,UAAM,wBAAwB,YAAY;AACxC,uBAAiB,IAAI;AACrB,mBAAa,IAAI;AACjB,YAAM,eAAe,aAAa,QAAQ,mBAAmB;AAE7D,UAAI,cAAc;AAChB,YAAI;AACF,kBAAQ,IAAI,qEAAqE,YAAY,EAAE;AAC/F,gBAAM,WAAW,MAAM,cAAc,YAAY;AACjD,kBAAQ,QAAQ;AAChB,kBAAQ,IAAI,2DAA2D,QAAQ;AAAA,QACjF,SAAS,GAAG;AACV,kBAAQ,MAAM,gDAAgD,CAAC;AAC/D,uBAAa,EAAE,OAAO;AACtB,kBAAQ,IAAI;AACZ,uBAAa,WAAW,mBAAmB;AAAA,QAC7C;AAAA,MACF;AACA,uBAAiB,KAAK;AAAA,IACxB;AAEA,0BAAsB;AAAA,EACxB,GAAG,CAAC,CAAC;AAEL,QAAM,QAAQ,YAAY,OAAO,OAAO,aAAa;AACnD,qBAAiB,IAAI;AACrB,iBAAa,IAAI;AACjB,QAAI;AACF,YAAM,WAAW,MAAM,aAAa,OAAO,QAAQ;AACnD